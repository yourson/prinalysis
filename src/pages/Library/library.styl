@import "~@/style/import"

.library-header
  display: flex
  justify-content: space-between
  padding: 0 10px
  color: blue-induce-text
  header, nav
    display: flex
    align-items: center
  header
    font-size: 20px
    i
      margin-right: 10px
      font-size: 30px
      color: blue-pure
  nav .nav-button
    display: flex
    align-items: center
    margin-left: 20px
    padding: 0
    font-size: 16px
    color: blue-induce-text
    & >>> i
      border-radius: 50%
      width: 28px
      height: 28px
      font-size: 20px
      line-height: 28px
      color: #fff
      background-color: blue-dark
    &:hover
      color: blue-pure
