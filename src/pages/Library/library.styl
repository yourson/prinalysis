@import "~@/style/import"

.library-header
  display: flex
  justify-content: space-between
  padding: 0 10px
  color: blue-induce-text
  header, nav
    display: flex
    align-items: center
  header
    font-size: 20px
    i
      margin-right: 10px
      font-size: 30px
      color: blue-pure
  nav .nav-button
    display: flex
    align-items: center
    margin-left: 20px
    padding: 0
    font-size: 16px
    color: blue-induce-text
    transition: all .3s ease
    & >>> i
      border-radius: 50%
      width: size = 28px
      font-size: 16px
      line-height: size
      color: #fff
      background-color: blue-dark
      transition: all .3s ease
    &:hover
      color: blue-pure
      & >>> i
        background-color: blue-pure

.seach, .documents
  selector-tabs()
  .selector-tabs
    margin: 6px auto 20px

.empty-tip
  padding: 40px 0
  font-size: 24px
  text-align: center
  color: shallow-text-gray
