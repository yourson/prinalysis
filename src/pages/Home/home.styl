@import "~@/style/import"
.content
  margin: 0 auto
  width: 1080px

.index
  position: absolute
  left: 0
  width: 100%
  min-width: 1200px
  background-color: #fff

.banner
  overflow: hidden
  position: relative
  text-align: center
  background-color: color-banner-back
  img
    width: auto
    height: 650px

.float-div
  position: absolute
  top: 0
  left: 0
  width: 100%
  text-align: left
  .div-center
    position: relative
    margin: 0 auto
    padding-top: 300px
    width: 500px
    text-align: center

.print-btn
  border-radius: 28px
  border: 1px solid deep-black
  padding: 16px 28px
  font-size: 18px
  color: deep-black
  background-color: transparent
  transition: border-color .3s, background-color .3s, color .3s
  cursor: pointer
  &:hover
    border: 1px solid theme-color
    color: #fff
    background-color: theme-color

.depict-foot
  border-bottom: 1px solid #eee
  width: 100%
  height: 240px
  background-color: transparent
  div
    position: relative
    margin: 0 auto
    max-width: 1400px
    div
      float: inherit
      margin-top: 60px
      padding-top: 20px
      font-size: 22px
      font-weight: 300
      line-height: 40px
      text-align: center
      color: shallow-text-gray
      .toPrint
        margin-top: 20px
        border-radius: 17px
        width: 160px
        font-size: 16px
    .foot-img-left
      position: absolute
      left: 100px
    .foot-img-right
      position: absolute
      right: 100px

.cooperation
  margin: 24px auto 8px
  font-size: 16px
  text-align: center
  background-color: #fff
  .payMethod
    vertical-align: middle
  img
    margin-right: 30px
    height: 40px
    vertical-align: middle

.foot-section
  margin: 20px 0 10px
  font-size: 14px
  text-align: center
  color: #999


