@import "./_variables"
.content
  width: 1080px
  margin: 0 auto

.index
  min-width: 1200px
  width: 100%
  position: absolute
  background-color: #fff
  left: 0

.banner
  position: relative
  text-align: center
  background-color: color-banner-back
  overflow: hidden
  img
    width: 100%
    height: auto

.float-div
  text-align: left
  width: 100%
  position: absolute
  left: 0
  top: 0
  .div-center
    width: 500px
    margin: 0 auto
    position: relative
    text-align: center
    padding-top: 300px

.print-btn
  padding: 16px 28px
  font-size: 18px
  border-radius: 28px
  border: 1px solid deep-black
  cursor: pointer
  background-color: transparent
  color: deep-black
  transition: border-color .3s, background-color .3s, color .3s;
  &:hover
    color: #fff
    border: 1px solid color-theme
    background-color: color-theme

.depict-foot
  width: 100%
  height: 240px
  background-color: transparent
  border-bottom: 1px solid #eee
  div
    max-width: 1400px
    margin: 0 auto
    position: relative
    div
      margin-top: 60px
      line-height: 38px
      padding-top: 20px
      font-size: 22px
      color: shallow-text-gray
      font-weight: 300
      text-align: center
      float: inherit
      .toPrint
        margin-top: 20px
        width: 160px
        height: 38px
        font-size: 16px
        border-radius: 17px
    .foot-img-left
      position: absolute
      left: 100px
    .foot-img-right
      position: absolute
      right: 100px

.cooperation
  background-color: #fff
  margin: 24px auto 8px
  text-align: center
  font-size: 16px
  .payMethod
    vertical-align: middle
  img
    height: 40px;
    vertical-align: middle;
    margin-right: 30px;

.foot-section
  margin: 20px 0 10px
  text-align: center
  font-size: 14px
  color: #999


