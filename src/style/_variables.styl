// Colors
global-background-color = #f2f2f2
color-theme = #20a0ff
theme-green = #0d6
theme-green-light = #c8ffc8
theme-green-dark = #096
light-blue = #57c5f7 // 2db7f5
dark-blue = #0f88eb
deep-black = #333
deep-text-gray = #222
color-banner-back = #fbf7f4
theme-text-color = #0e90d2
induce-text-color = #175199
inconspicuous-text-color = #8590a6
shallow-text-gray = #666
descrip-back = #f9f9f9
border-gray = #e7eaf1

scrollbarWidth = 8px

// Scrollbar
scrollbar(barWidth = scrollbarWidth)
  &::-webkit-scrollbar
    width: barWidth
    background-color: rgba(#000, .05)
    &-thumb
      border-radius: barWidth
      background-color: rgba(#000, .15)
      &:active
        background-color: rgba(#000, .3)

.left
  float: left

.right
  float: right

.gray
  color: #fff
  background-color: #999
