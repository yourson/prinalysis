@import "~@/style/import"
$head-hight = 60px

header
  position: relative
  top: 0
  left: 0
  box-sizing: border-box
  padding: 0 20px
  width: 100%
  height: $head-hight
  color: #fff
  background-color: blue-dark

.container
  margin: 0 auto
  box-sizing: border-box
  padding: 0 30px
  width: 1140px
  height: 100%
  background-color: blue-dark

.nav-logo
  width: auto
  height: $head-hight
  vertical-align: sub

.nav-list
  float: right
  padding-left: 20px
  height: 100%
  background-color: blue-dark

.nav-item
  display: inline-block
  margin: 0 10px
  padding: 0 18px
  height: $head-hight
  font-size: 16px
  text-align: center
  color: #fff
  background-color: blue-dark
  transition: border-color .3s, background-color .3s, color .3s
  &:hover
    border-bottom: blue-dark
  &:hover, &.is-active:hover
    background-color: rgba(0, 0, 0, .05)
  &.is-active
    border-bottom: 4px solid theme-green
    background-color: rgba(0, 0, 0, .1)
  .count
    display: inline-block
    margin: 0 2px
    border-radius: 10px
    padding: 0 6px
    font-size: 14px
    line-height: 20px
    background: theme-green

.nav-button
  border: none

.left
  float: left

.right
  float: right

.user
  float: right
  margin-right: 6px
  padding: 0 6px
  height: 60px
  .identity
    display: flex
    flex-direction: column
    justify-content: center
    float: left
    margin: 0 12px
    height: 60px
    font-size: 14px
    line-height: normal
    text-align: left
    color: #fff
    .nick
      font-size: 12px
      opacity: .8
  img
    float: left
    margin-top: 5px
    border-radius: 25px
    width: 50px
    height: 50px
    background: lightgray
