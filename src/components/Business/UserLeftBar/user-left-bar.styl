@import "~@/style/import"

.left-bar
  display: inline-block
  width: 200px
  margin-right: 10px
  vertical-align: top
  text-align: left
  box-shadow: 0 0 4px 1px #ddd

.head
  width: 100%
  height: 70px
  background-color: theme-text-color
  vertical-align: top
  .avatar
    width: 50px
    height: 50px
    border-radius: 50%
    margin: 10px
  .name
    display: inline-block
    vertical-align: top
    .nickname
      margin-top: 14px
      font-size: 16px
      color: #fff

.tabs
  position: relative
  width: 100%
  background-color: #fff
  .items
    background-color: transparent
    .tab-item
      display: block
      cursor: pointer
      width: 200px
      height: 70px
      line-height: 70px
      font-size: 15px
      color: #666
      text-align: center
      background-color: transparent
      transition: all .2s ease-out
      &:hover
        background: rgba(#ccc, .1)
    .is-active
      border-left: 4px solid theme-green
      background-color: #f2f2f2
