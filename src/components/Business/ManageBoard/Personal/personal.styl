@import "~@/style/import"

.user-header
  display: flex
  padding: 0 0 20px 0
  justify-content: center
  .avatar
    display: flex
    align-items: center
    img
      width: 50px
      height: 50px
      border-radius: 25px
      background-color: #eee
    .nickname
      display: inline-block
      margin: 0 16px
      font-size: 28px
      color: theme-text-color

.user-info
  text-align: left
  padding-left:60px
  font-size: 16px
  color: deep-black
  .row
    display: flex
    margin: 20px 0
    span
      flex: 1

.footer
  width: 100%
  height: 60px
  margin: 20px 0
  text-align: center
  display: flex
  justify-content: center
  align-items: center
  .footer-button
    margin: 0 20px
    padding: 0
    width: 120px
    height: 32px
    background: theme-text-color
    transition: all .2s ease-out
    &:hover
      box-shadow: 0 0 6px 0 #999
      background-color: color-theme
