@import "~@/style/import"

.tag
  display: inline-block
  border-radius: 8px
  padding: 0 10px
  font-size: 14px
  vertical-align: middle

.point-name, .date
  margin-left: 12px
  font-size: 20px
  vertical-align: middle
  color: #0d5f92

.date
  font-size: 14px
  color: #9f9f9f


.infom-item
  overflow: hidden
  margin: 11px auto
  border: 1px solid #ddd
  width: 100%
  height: 100px
  font-size: 0
  transition: all .2s ease-out
  cursor: pointer
  &:hover
    box-shadow: 0 0 6px 0 #999
.item-icon
  display: inline-block
  border-right: 1px dashed #ddd
  height: 100%
  width: 12%
  vertical-align: top
  i
    margin-top: 28px
    font-size: 42px
    color: #0e90d2
.item-info
  display: inline-block
  border-right: 1px dashed #ddd
  width: 70%
  height: 100%
  .file-info
    margin: 20px 0 5px 28px
    text-align: left
  .file-content
    margin: 0 0 6px 28px
    font-size: 14px
    text-align: left
    color: #111
    .first-file-name
      margin-left: 34px
.item-count
  display: inline-block
  width: 18%
  font-size: 24px
  line-height: 100px
  vertical-align: top
  color: #444
