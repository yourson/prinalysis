@import "~@/style/import"

.pay-modal
  flex-direction: column
  align-content: center
  border-radius: 4px
  text-align: center
  background-color: #fff
  header
    margin-top: 20px
    font-size: 16px

.paybox
  width: 520px
  position: relative
  min-height: 300px
  text-align: center
  transition: height .2s ease-out
  .price
    margin-top: 0
    width: 100%
    font-size: 36px
    color: #000
  .tip
    width: 100%
    font-size: 16px
    color: #069
  .QR-box
    margin: 10px auto
    width: 280px
    height: 280px
    text-align: center
    vertical-align: middle
  .switch
    margin: 0 10px
    border: 1px solid #ccc
    border-radius: 5px
    padding: 8px 0
    width: 140px
    height: 38px
    font-size: 13px
    text-align: center
    color: #666
    background-color: transparent
  .footer
    padding: 14px 0
    width: 100%
    font-size: 12px
    color: #999
  .wxPay-code
    margin: 20px auto 0
    width: 240px
    height: 240px
  .aliPay-iframe
    margin-left: -42px
    border: none
    height: 260px

.payway
  display: flex
  justify-content: space-around
  margin: 30px auto
  width: 80%
  font-size: 12px
  .wechat, .alipay
    display: inline-block
    border: 1px solid #ddd
    border-radius: 5px
    padding-top: 16px
    width: 172px
    height: 172px
    cursor: pointer
    &:hover
      box-shadow: 0 0 8px 0 #bbb
    .title
      width: 126px
      height: 39px
    .QR-icon
      margin-top: 13px
    .way-tip
      margin-top: 8px
      color: #666


