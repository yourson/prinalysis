@import "~@/style/import"

.modal-wrapper
  display: flex
  flex-direction: column
  justify-content: center
  overflow-x: hidden
  overflow-y: autoi
  position: fixed
  top: 0
  left: 0
  z-index: 20
  width: 100%
  height: 100%
  transition: opacity .3s ease-out

  .modal-backdrop
    position: fixed
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: 0
    background-color: rgba(#000, .65)
    transition: background-color .3s ease-out

  .modal-dialog
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    position: fixed
    top: 0
    left: 0
    z-index: 1
    margin-right: auto
    margin-left: auto
    width: 100%
    height: 100%
    transition: height .8s ease
