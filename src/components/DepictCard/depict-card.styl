@import "~@/style/import"
.description
  width: 100%
  text-align: center
  .flow
    text-align: center
    width: 100%
    margin: 60px auto

depict-base(direct)
  height: 420px
  other-direct = direct == 'left' ? right : left
  background-color: direct == 'left' ? transparent : descrip-back
  &>div
    max-width: 1400px
    margin: 0 auto
    &>img
      float: other-direct
      margin-{other-direct}: 100px
      margin-top: 80px
    &>div
      float: direct
      margin-{direct}: 160px
      margin-top: 150px
      div
        line-height: 38px
        color: shallow-text-gray
        font-size: 14px
        &:first-child
          font-size: 26px
          margin-bottom: 10px
          color: deep-text-gray

.depict-right
  depict-base(right)

.depict-left
  depict-base(left)
