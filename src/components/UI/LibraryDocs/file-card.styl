@import "~@/style/import"

.file-card
  display: inline-block
  margin: 8px 12px
  border: 1px solid #ccc
  border-radius: 6px
  width: 320px
  height: 112px
  font-size: 0
  cursor: pointer
  transition: box-shadow .2s ease-out
  &:hover
    box-shadow: 0 0 1px 2px #eee

  .format
    display: inline-block
    border-right: 1px dashed #ddd
    width: 25%
    text-align: center
    .file-icon
      width: 86%
    .pages
      font-size: 14px
      text-align: center
      color: shallow-text-gray

  .descripte
    display: inline-block
    overflow: hidden
    padding: 6px 14px 0
    width: 75%
    line-height: normal
    .file-name
      overflow: hidden
      padding-top: 4px
      height: 50px
      font-size: 14px
      white-space: nowrap
      text-overflow: ellipsis
      color: deep-black
    .uploader, .created
      overflow: hidden
      margin-right: 15px
      max-width: 110px
      font-size: 12px
      white-space: nowrap
      text-overflow: ellipsis
      color: shallow-text-gray
    .uploader
      color: blue-induce-text
      i
        font-size: 14px
    .collected, .printed
      display: inline-block
      margin-top: 10px
      margin-right: 15px
      font-size: 12px
      color: shallow-text-gray
      cursor: pointer
      i
        font-size: 16px
        vertical-align: top


